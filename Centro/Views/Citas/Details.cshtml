@model Centro.Models.Citas

<head>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Citas/Detalles.css" asp-append-version="true" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<body>
    <div class="container mt-5">
        <!-- Botón para volver al mapa -->
        <a href="/Citas/List" class="back-to-map-icon">
            <i class="bi bi-arrow-left-circle-fill"></i>
        </a>

        <h1 class="text-center" style="font-family: 'Poppins', sans-serif; color: #3a3a3a;">Detalles de la Cita</h1>

        <div class="table-responsive mt-4">
            <table class="table table-bordered shadow-sm">
                <thead style="background-color: #ced4db;">
                    <tr>
                        <th>Campo</th>
                        <th>Valor</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Rut)</td>
                        <td>@Html.DisplayFor(model => model.Rut)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Nombre)</td>
                        <td>@Html.DisplayFor(model => model.Nombre)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Apellido)</td>
                        <td>@Html.DisplayFor(model => model.Apellido)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Correo)</td>
                        <td>@Html.DisplayFor(model => model.Correo)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Telefono)</td>
                        <td>@Html.DisplayFor(model => model.Telefono)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Fecha)</td>
                        <td>
                            @Html.DisplayFor(model => model.Fecha.Day)/@Html.DisplayFor(model => model.Fecha.Month)/@Html.DisplayFor(model => model.Fecha.Year)
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Hora)</td>
                        <td>@Html.DisplayFor(model => model.Hora)</td>
                    </tr>
                    <tr>
                        <td>Especialidad</td>
                        <td>@Html.DisplayFor(model => model.Especialidad.Nombre)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Profesionales.Nombre)</td>
                        <td>@Html.DisplayFor(model => model.Profesionales.Nombre)</td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-end mt-4">
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.Id" style="font-family: 'Poppins', sans-serif;">Editar</a>
            </div>
        </div>
    </div>
</body>