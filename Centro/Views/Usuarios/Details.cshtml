@model Centro.Models.Usuario

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/Usuarios/Detalles.css" asp-append-version="true" />

<div class="container mt-5">
    <!-- Botón para volver al mapa -->
    <a href="/Usuarios/Index" class="back-to-map-icon">
        <i class="bi bi-arrow-left-circle-fill"></i>
    </a>

    <h1 class="text-center" style="font-family: 'Poppins', sans-serif; color: #3a3a3a;">Detalles de los Usuarios</h1>

    <div class="table-responsive mt-4">
        <table class="table table-bordered shadow-sm">
            <thead style="background-color: #ced4db;">
                <tr>
                    <th>Campo</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Nombre)</td>
                    <td>@Html.DisplayFor(model => model.Nombre)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Email)</td>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Rol)</td>
                    <td>@Html.DisplayFor(model => model.Rol)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.isBlock)</td>
                    <td>@Html.DisplayFor(model => model.isBlock)</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-end mt-4">
            <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@Model.Rut" style="font-family: 'Poppins', sans-serif;">Editar</a>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"></script>