@model Centro.Models.Profesionales

@{
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/Profesionales/Detalles.css" asp-append-version="true" />

<div class="container mt-5">

    <!-- Botón para volver al mapa -->
    <a href="/Profesionales/Index" class="back-to-map-icon">
        <i class="bi bi-arrow-left-circle-fill"></i>
    </a>

    <h1 class="text-center" style="font-family: 'Poppins', sans-serif; color: #3a3a3a;">Detalles del Profesional</h1>


    <div class="table-responsive mt-4">
        <table class="table table-bordered shadow-sm">
            <thead style="background-color: #ced4db;">
                <tr>
                    <th>Campo</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Rut)</td>
                    <td>@Html.DisplayFor(model => model.Rut)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Imagen)</td>
                    <td><img src="@Model.Imagen" alt="Imagen" class="rounded" style="width: 75px;"></td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Nombre)</td>
                    <td>@Html.DisplayFor(model => model.Nombre)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Email)</td>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Especialidad)</td>
                    <td>@Html.DisplayFor(model => model.Especialidad.Nombre)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.SedeEgreso)</td>
                    <td>@Html.DisplayFor(model => model.SedeEgreso)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Diplomados)</td>
                    <td>@Html.DisplayFor(model => model.Diplomados)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Latitud)</td>
                    <td>@Html.DisplayFor(model => model.Latitud)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Longitud)</td>
                    <td>@Html.DisplayFor(model => model.Longitud)</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.Id" style="font-family: 'Poppins', sans-serif;">Editar</a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"></script>
